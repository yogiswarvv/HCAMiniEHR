@page
@model HCAMiniEHR.Pages.Patients.DetailsModel
@{
    ViewData["Title"] = "Patient Details";
}

<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="bi bi-person-badge-fill me-2"></i>Patient Details
        </h1>
        <div>
            <a asp-page="Edit" asp-route-id="@Model.Patient.PatientId" class="btn btn-warning">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-fill me-2"></i>Personal Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Patient ID:</dt>
                        <dd class="col-sm-7">@Model.Patient.PatientId</dd>

                        <dt class="col-sm-5 text-muted">Full Name:</dt>
                        <dd class="col-sm-7"><strong>@Model.Patient.FullName</strong></dd>

                        <dt class="col-sm-5 text-muted">Date of Birth:</dt>
                        <dd class="col-sm-7">@Model.Patient.DateOfBirth.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-5 text-muted">Gender:</dt>
                        <dd class="col-sm-7">@Model.Patient.Gender</dd>

                        <dt class="col-sm-5 text-muted">Phone:</dt>
                        <dd class="col-sm-7">@Model.Patient.Phone</dd>

                        <dt class="col-sm-5 text-muted">Email:</dt>
                        <dd class="col-sm-7">@Model.Patient.Email</dd>

                        <dt class="col-sm-5 text-muted">Address:</dt>
                        <dd class="col-sm-7">@Model.Patient.Address</dd>

                        <dt class="col-sm-5 text-muted">Created Date:</dt>
                        <dd class="col-sm-7">@Model.Patient.CreatedDate.ToString("MM/dd/yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-calendar-check-fill me-2"></i>Appointments</h5>
                    <a asp-page="/Appointments/Create" asp-route-patientId="@Model.Patient.PatientId" 
                       class="btn btn-sm btn-light">
                        <i class="bi bi-plus-circle me-1"></i>New Appointment
                    </a>
                </div>
                <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                    @if (!Model.Patient.Appointments.Any())
                    {
                        <p class="text-muted mb-0">No appointments scheduled.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var appointment in Model.Patient.Appointments.OrderByDescending(a => a.AppointmentDate))
                            {
                                <div class="list-group-item bg-transparent border-bottom" style="border-color: rgba(255,255,255,0.1) !important;">
                                    <div class="d-flex w-100 justify-content-between mb-2">
                                        <h6 class="mb-0">@appointment.DoctorName</h6>
                                        <small>
                                            @if (appointment.Status == "Scheduled")
                                            {
                                                <span class="badge bg-success">@appointment.Status</span>
                                            }
                                            else if (appointment.Status == "Completed")
                                            {
                                                <span class="badge bg-secondary">@appointment.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@appointment.Status</span>
                                            }
                                        </small>
                                    </div>
                                    <p class="mb-1 text-muted">
                                        <i class="bi bi-calendar me-1"></i>@appointment.AppointmentDate.ToString("MM/dd/yyyy")
                                        <i class="bi bi-clock ms-2 me-1"></i>@appointment.AppointmentTime.ToString(@"hh\:mm")
                                    </p>
                                    <small class="text-muted">@appointment.Reason</small>
                                    @if (appointment.LabOrders.Any())
                                    {
                                        <div class="mt-2">
                                            <small class="text-info">
                                                <i class="bi bi-clipboard-pulse me-1"></i>@appointment.LabOrders.Count Lab Order(s)
                                            </small>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
