@page
@model HCAMiniEHR.Pages.Patients.DeleteModel
@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card glass-card shadow-sm" style="border: 2px solid rgba(239, 68, 68, 0.3);">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Patient
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this patient? This action cannot be undone.
                        @if (Model.Patient.Appointments.Any())
                        {
                            <br /><strong>Note:</strong> <text>This will also delete @Model.Patient.Appointments.Count appointment(s) associated with this patient.</text>
                        }
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Patient ID:</dt>
                        <dd class="col-sm-8">@Model.Patient.PatientId</dd>

                        <dt class="col-sm-4 text-muted">Full Name:</dt>
                        <dd class="col-sm-8"><strong>@Model.Patient.FullName</strong></dd>

                        <dt class="col-sm-4 text-muted">Date of Birth:</dt>
                        <dd class="col-sm-8">@Model.Patient.DateOfBirth.ToString("MM/dd/yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Gender:</dt>
                        <dd class="col-sm-8">@Model.Patient.Gender</dd>

                        <dt class="col-sm-4 text-muted">Phone:</dt>
                        <dd class="col-sm-8">@Model.Patient.Phone</dd>

                        <dt class="col-sm-4 text-muted">Email:</dt>
                        <dd class="col-sm-8">@Model.Patient.Email</dd>

                        <dt class="col-sm-4 text-muted">Appointments:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Patient.Appointments.Count</span>
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Patient.PatientId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Delete Patient
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
