@page
@model HCAMiniEHR.Pages.LabOrders.UpdateStatusModel
@{
    ViewData["Title"] = "Update Lab Order Status";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card glass-card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Update Lab Order Status
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="LabOrderId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">Test Name</label>
                            <input asp-for="TestName" class="form-control" readonly style="background: rgba(255,255,255,0.05);" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Results" class="form-label">Results</label>
                            <textarea asp-for="Results" class="form-control" rows="4" 
                                      placeholder="Enter lab test results here..."></textarea>
                            <span asp-validation-for="Results" class="text-danger"></span>
                            <div class="form-text text-muted">
                                <small>Add detailed results when status is "Completed"</small>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle me-2"></i>
                            <small>If you set the status to "Completed", the completion date will be automatically set to today.</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-info">
                                <i class="bi bi-save me-1"></i>Update Status
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
