@page
@model HCAMiniEHR.Pages.LabOrders.IndexModel
@{
    ViewData["Title"] = "Lab Orders";
}

<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="bi bi-clipboard-pulse-fill me-2"></i>Lab Orders
        </h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Create Lab Order
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.LabOrders.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No lab orders found.
        </div>
    }
    else
    {
        <div class="card glass-card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Test Name</th>
                                <th>Patient</th>
                                <th>Appointment Date</th>
                                <th>Order Date</th>
                                <th>Status</th>
                                <th>Results</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.LabOrders)
                            {
                                <tr>
                                    <td>@order.LabOrderId</td>
                                    <td><strong>@order.TestName</strong></td>
                                    <td>@order.Appointment.Patient.FullName</td>
                                    <td>@order.Appointment.AppointmentDate.ToString("MM/dd/yyyy")</td>
                                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        @if (order.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">@order.Status</span>
                                        }
                                        else if (order.Status == "Completed")
                                        {
                                            <span class="badge bg-success">@order.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@order.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(order.Results))
                                        {
                                            <small>@order.Results.Substring(0, Math.Min(50, order.Results.Length))...</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="UpdateStatus" asp-route-id="@order.LabOrderId" 
                                           class="btn btn-sm btn-outline-primary" title="Update Status">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <span class="badge bg-primary">Total Lab Orders: @Model.LabOrders.Count()</span>
        </div>
    }
</div>
