@page
@model HCAMiniEHR.Pages.Appointments.IndexModel
@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="bi bi-calendar-check-fill me-2"></i>Appointments
        </h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Schedule Appointment
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Appointments.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No appointments found. Click "Schedule Appointment" to get started.
        </div>
    }
    else
    {
        <div class="card glass-card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Patient</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Doctor</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th>Lab Orders</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.Appointments)
                            {
                                <tr>
                                    <td>@appointment.AppointmentId</td>
                                    <td>
                                        <strong>@appointment.Patient.FullName</strong>
                                    </td>
                                    <td>@appointment.AppointmentDate.ToString("MM/dd/yyyy")</td>
                                    <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                    <td>@appointment.DoctorName</td>
                                    <td>@appointment.Reason</td>
                                    <td>
                                        @if (appointment.Status == "Scheduled")
                                        {
                                            <span class="badge bg-success">@appointment.Status</span>
                                        }
                                        else if (appointment.Status == "Completed")
                                        {
                                            <span class="badge bg-secondary">@appointment.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@appointment.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@appointment.LabOrders.Count</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Details" asp-route-id="@appointment.AppointmentId" 
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="/LabOrders/Create" asp-route-appointmentId="@appointment.AppointmentId" 
                                               class="btn btn-outline-success" title="Add Lab Order">
                                                <i class="bi bi-clipboard-plus"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <span class="badge bg-primary">Total Appointments: @Model.Appointments.Count()</span>
        </div>
    }
</div>
