@page
@model HCAMiniEHR.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4 fade-in">
    <h1 class="display-5 mb-4">
        <i class="bi bi-graph-up-arrow me-2"></i>Healthcare Reports
    </h1>

    <!-- Report 1: Pending Lab Orders -->
    <div class="card glass-card shadow-sm mb-4">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">
                <i class="bi bi-clipboard-pulse me-2"></i>Pending Lab Orders
            </h4>
           
        </div>
        <div class="card-body">
            @if (!Model.PendingLabOrders.Any())
            {
                <p class="text-muted mb-0">No pending lab orders found.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Test Name</th>
                                <th>Patient</th>
                                <th>Order Date</th>
                                <th>Appointment Date</th>
                                <th>Doctor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.PendingLabOrders)
                            {
                                <tr>
                                    <td>@order.LabOrderId</td>
                                    <td><strong>@order.TestName</strong></td>
                                    <td>@order.PatientName</td>
                                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                    <td>@order.AppointmentDate.ToString("MM/dd/yyyy")</td>
                                    <td>@order.DoctorName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <span class="badge bg-warning text-dark">Total Pending: @Model.PendingLabOrders.Count()</span>
                </div>
            }
        </div>
    </div>

    <!-- Report 2: Patients Without Follow-Up -->
    <div class="card glass-card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Patients Without Follow-Up Appointments
            </h4>
           
        </div>
        <div class="card-body">
            @if (!Model.PatientsWithoutFollowUp.Any())
            {
                <p class="text-muted mb-0">All patients have future appointments scheduled!</p>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    These patients have no future appointments scheduled and may need follow-up.
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Patient ID</th>
                                <th>Patient Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Last Appointment</th>
                                <th>Total Appointments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model.PatientsWithoutFollowUp)
                            {
                                <tr>
                                    <td>@patient.PatientId</td>
                                    <td><strong>@patient.PatientName</strong></td>
                                    <td>@patient.Phone</td>
                                    <td>@patient.Email</td>
                                    <td>
                                        @if (patient.LastAppointmentDate.HasValue)
                                        {
                                            @patient.LastAppointmentDate.Value.ToString("MM/dd/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@patient.TotalAppointments</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <span class="badge bg-danger">Patients Needing Follow-Up: @Model.PatientsWithoutFollowUp.Count()</span>
                </div>
            }
        </div>
    </div>

    <!-- Report 3: Doctor Productivity -->
    <div class="card glass-card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-people-fill me-2"></i>Doctor Productivity
            </h4>
        </div>
        <div class="card-body">
            @if (!Model.DoctorProductivity.Any())
            {
                <p class="text-muted mb-0">No doctor productivity data available.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Doctor Name</th>
                                <th>Specialization</th>
                                <th>Total Appointments</th>
                                <th>Total Lab Orders</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in Model.DoctorProductivity)
                            {
                                <tr>
                                    <td><strong>@doctor.DoctorName</strong></td>
                                    <td>@doctor.Specialization</td>
                                    <td>
                                        <span class="badge bg-info">@doctor.TotalAppointments</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@doctor.TotalLabOrders</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

