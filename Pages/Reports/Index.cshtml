@page
@model HCAMiniEHR.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4 fade-in">
    <h1 class="display-5 mb-4">
        <i class="bi bi-graph-up-arrow me-2"></i>Healthcare Reports
    </h1>

    <!-- Report 1: Pending Lab Orders -->
    <div class="card glass-card shadow-sm mb-4">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">
                <i class="bi bi-clipboard-pulse me-2"></i>Pending Lab Orders
            </h4>
           
        </div>
        <div class="card-body">
            @if (!Model.PendingLabOrders.Any())
            {
                <p class="text-muted mb-0">No pending lab orders found.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Test Name</th>
                                <th>Patient</th>
                                <th>Order Date</th>
                                <th>Appointment Date</th>
                                <th>Doctor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.PendingLabOrders)
                            {
                                <tr>
                                    <td>@order.LabOrderId</td>
                                    <td><strong>@order.TestName</strong></td>
                                    <td>@order.PatientName</td>
                                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                    <td>@order.AppointmentDate.ToString("MM/dd/yyyy")</td>
                                    <td>@order.DoctorName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <span class="badge bg-warning text-dark">Total Pending: @Model.PendingLabOrders.Count()</span>
                </div>
            }
        </div>
    </div>

    <!-- Report 2: Patients Without Follow-Up -->
    <div class="card glass-card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Patients Without Follow-Up Appointments
            </h4>
           
        </div>
        <div class="card-body">
            @if (!Model.PatientsWithoutFollowUp.Any())
            {
                <p class="text-muted mb-0">All patients have future appointments scheduled!</p>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    These patients have no future appointments scheduled and may need follow-up.
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Patient ID</th>
                                <th>Patient Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Last Appointment</th>
                                <th>Total Appointments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model.PatientsWithoutFollowUp)
                            {
                                <tr>
                                    <td>@patient.PatientId</td>
                                    <td><strong>@patient.PatientName</strong></td>
                                    <td>@patient.Phone</td>
                                    <td>@patient.Email</td>
                                    <td>
                                        @if (patient.LastAppointmentDate.HasValue)
                                        {
                                            @patient.LastAppointmentDate.Value.ToString("MM/dd/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@patient.TotalAppointments</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <span class="badge bg-danger">Patients Needing Follow-Up: @Model.PatientsWithoutFollowUp.Count()</span>
                </div>
            }
        </div>
    </div>

    <!-- Report 3: Appointments by Month -->
    <div class="card glass-card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-calendar3 me-2"></i>Appointments Summary by Month
            </h4>
            
        </div>
        <div class="card-body">
            @if (!Model.AppointmentsByMonth.Any())
            {
                <p class="text-muted mb-0">No appointment data available.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Total Appointments</th>
                                <th>Scheduled</th>
                                <th>Completed</th>
                                <th>Cancelled</th>
                                <th>Completion Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var month in Model.AppointmentsByMonth)
                            {
                                var completionRate = month.TotalAppointments > 0 
                                    ? (month.CompletedCount * 100.0 / month.TotalAppointments) 
                                    : 0;
                                
                                <tr>
                                    <td><strong>@month.MonthName</strong></td>
                                    <td>
                                        <span class="badge bg-info">@month.TotalAppointments</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@month.ScheduledCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@month.CompletedCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">@month.CancelledCount</span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px; background: rgba(255,255,255,0.1);">
                                            <div class="progress-bar" role="progressbar" 
                                                 style="width: @completionRate%" 
                                                 aria-valuenow="@completionRate" aria-valuemin="0" aria-valuemax="100">
                                                @completionRate.ToString("F1")%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <span class="badge bg-primary">Total Months: @Model.AppointmentsByMonth.Count()</span>
                </div>
            }
        </div>
    </div>
</div>
